<section id="order" class="container-fluid content-section text-center order-section">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="thumbnail">
        <%=image_tag("bottles/royal-cremas-750ml.jpg")%>
        <div class="caption">
          <h3>750ml Bottle</h3>
          <p>Free Shipping on Orders with 2+ Bottles</p>
          <form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post">
            <input type="hidden" name="cmd" value="_s-xclick">
            <input type="hidden" name="hosted_button_id" value="GH42DCKPZLAU4">
            <input type="hidden" name="on0" value="Order Cremas Bottles">
            <div class="dropdown">
              <select name="os0" class="selectpicker full-width">
                <option value="1 Bottle">1 Bottle $35.00 USD</option>
                <option value="2 Bottles">2 Bottles $60.00 USD</option>
                <option value="3 Bottles">3 Bottles $90.00 USD</option>
                <option value="4 Bottles">4 Bottles $120.00 USD</option>
              </select>
            </div>
            <input type="hidden" name="currency_code" value="USD">
            <input class="btn btn-default btn-add-to-cart" type="submit" value="Add to Cart">
          </form>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <h4>For Large Orders or Special Occasions, Contact Us Below.</h4>
    </div>
  </div>
</section>
